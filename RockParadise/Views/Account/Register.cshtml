@model RockParadise.Models.account
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<link href="~/Content/StyleForClient/StyleForAccount.css" rel="stylesheet" />

<section>


    <div class="form-box">

        <div class="form-value">
            @using (Html.BeginForm())
            {

                <h2>Register</h2>
                @Html.AntiForgeryToken()

                <div class="form-horizontal">


                    <div class="inputbox">
                        <ion-icon name="person-outline"></ion-icon>
                        <input id="username" name="username" type="text" required>
                        <label for="">Username</label>
                    </div>

                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input id="password" name="password" type="password" required>
                        <label for="">Password</label>
                    </div>


                    <div class="inputbox">
                        <ion-icon name="lock-closed-outline"></ion-icon>
                        <input id="confirmpassword" name="Confirmpassword" type="password" required>
                        <label for="">Confirm password</label>
                    </div>
                    <button onclick="RegAccount()" type="button" class="bsubmit">Register</button>
                    <div class="register">
                        <p>Have a account <a href="~/Account/Login">Login</a></p>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
<script>
    function RegAccount() {
        let username = document.getElementById("username").value;
        let password = document.getElementById("password").value;
        let confirmpassword = document.getElementById("confirmpassword").value;
        $.ajax({
            url: "/Account/Reg",
            type: "POST",
            data: { username: username, password: password, confirmpassword: confirmpassword},
            success: function (result) {
                if (result.success) {
                    Swal.fire({
                        icon: 'success',
                        title: 'Register successful',
                        showConfirmButton: false,
                        timer: 1500

                    });
                    
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: result.message
                    });
                }
            },
            error: function (error) {
                // xử lý lỗi ở đây
                alert(error.responseJSON.message);
            }
        });
    }
</script>