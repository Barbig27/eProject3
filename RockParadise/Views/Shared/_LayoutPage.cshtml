<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/StyleForClient/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/StyleForClient/Site.css" rel="stylesheet" />
    <link href="~/Content/StyleForClient/Style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.1.4/dist/sweetalert2.all.min.js"></script>
    <link href="~/Content/StyleForClient/cssFooter.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <header class="header">
            <div class="grid">
                <nav class="header_navbar">
                    <ul class="header_navbar-list">
                        <li class="header_navbar-item header_navbar-item--qr">
                            
                            
                        </li>
                        <li class="header_navbar-item">
                            Connect
                            <a href="" class="header_navbar-icon-link">
                                <i class="fa-brands fa-facebook"></i>
                            </a>

                            <a href="" class="header_navbar-icon-link">
                                <i class="fa-brands fa-tiktok"></i>
                            </a>
                        </li>
                    </ul>

                    <ul class="header_navbar-list">

                        @if (Session["Role"] != null && (string)Session["Role"] == "admin")
                        {
                            <li class="header_navbar-item">
                                <a href="~/HomeAdmin" class="header_navbar-item-link">

                                    Admin panel
                                </a>
                            </li>
                        }








                        <li class="header_navbar-item">
                            <a href="" class="header_navbar-item-link">
                                <i class="fa-solid fa-phone"></i>
                                Contact
                            </a>
                        </li>

                        <li class="header_navbar-item">
                            <a href="/MyPurchase/Index" class="header_navbar-item-link">
                                <i class="fa-solid fa-calendar-days"></i> My Purchase
                            </a>
                        </li>

                        <li class="header_navbar-item">
                            <a href="/Cart" class="header_navbar-item-link">
                                <i class="fa-solid fa-cart-shopping"></i>
                                Cart
                            </a>
                        </li>

                        @if (Session["Username"] == null)
                        {
                            <li class="header_navbar-item">
                                <a style="color: white" href="~/Account/Login">Login</a>
                            </li>

                            <li class="header_navbar-item">
                                <a style="color: white" href="~/Account/Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="header_navbar-item">
                                <a style="color: white" href="~/Account/Details">Hello!  @Session["Username"]</a>
                            </li>

                            <li class="header_navbar-item">
                                <a style="color: white" href="~/Account/Logout">Logout</a>
                            </li>
                        }

                    </ul>
                </nav>

                <div class="header-with-search">
                    <div class="header_logo">
                        <a href="~/Home" class="header_logo-img">
                            <img src="https://i.imgur.com/Sf6F2XJ.png" alt="Việt Nam" class="header_logo-img" />
                        </a>
                    </div>

                    <form method="post" action="~/Home/Index" class="header_search">
                        <div class="header_search-input-wrap">
                            <input name="text_search" type="text" class="header_search-input" placeholder="Search product" />

                        </div>

                        <div class="header_search-select">

                            <i class="header_search-select-icon fa-solid fa-download"></i>
                        </div>
                        <button type="submit" class="header_search-btn">
                            <i class="header_search-btn-icon fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>

                    <div class="header_cart">
                        <a href="/Cart"><i class="header_cart-icon fa-solid fa-cart-shopping"></i></a>
                        

                        <div class="header_cart-list header_cart-list--no-cart">

                        </div>
                    </div>

                </div>

            </div>
        </header>
        @RenderBody()

    </div>






</body>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <h3>Contact Us</h3>
                <p class="address">54 Le Thanh Nghi, Hai Ba Trung, Hanoi, Vietnam</p>
                <p class="hotline">Hotline: 0123456789</p>
            </div>
            <div class="col-md-4">
                <h3>Subscribe to Our Newsletter</h3>
                <form>
                    <div class="form-group">
                        <input type="email" class="form-control" id="email" placeholder="Enter your email address">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Subscribe</button>
                </form>
            </div>
            <div class="col-md-4">
                <h3>Follow Us</h3>
                <ul class="social-icons">
                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                    <li><a href="#"><i class="fab fa-youtube"></i></a></li>
                </ul>
            </div>
        </div>
        <hr>
        <div class="row">
            <div class="col-md-12">
                <p class="text-muted">© 2023 Your Gemstone Shop. All rights reserved.</p>
            </div>
        </div>
    </div>
</footer>


</html>
